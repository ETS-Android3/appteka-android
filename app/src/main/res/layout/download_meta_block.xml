<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meta_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/meta_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autoLink="web|email"
            android:gravity="fill_horizontal"
            android:textColor="?text_primary_color"
            android:textSize="16sp"
            android:textIsSelectable="true"
            tools:text="App Description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="2dp">

            <include
                android:id="@+id/description_author_icon"
                layout="@layout/user_icon_xs"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="5dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:text="@string/description_author"
                android:textColor="?text_primary_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/edit_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="@string/edit_meta"
        android:textAllCaps="true"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        tools:targetApi="jelly_bean" />

</LinearLayout>